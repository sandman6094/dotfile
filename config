# Sandman6094's I3-GAPS config
 
# keymap bind
set $mod Mod4
floating_modifier $mod
bindsym $mod+Return exec lxterminal
bindsym $mod+F4 kill
bindsym $mod+d exec rofi -show run -show-icons
 
# font
font pango:YaHei Consolas Hybrid 9
 
# focus
focus_follows_mouse no
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
 
# move
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
 
# mode toggle
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
 
# workspace 
bindsym $mod+1 workspace 壹
bindsym $mod+2 workspace 贰
bindsym $mod+3 workspace 叁
bindsym $mod+4 workspace 肆
bindsym $mod+5 workspace 伍
bindsym $mod+6 workspace 陆
bindsym $mod+7 workspace 柒
bindsym $mod+8 workspace 捌
bindsym $mod+9 workspace 玖
bindsym $mod+0 workspace 零
bindsym $mod+Shift+1 move container to workspace 壹
bindsym $mod+Shift+2 move container to workspace 贰
bindsym $mod+Shift+3 move container to workspace 叁
bindsym $mod+Shift+4 move container to workspace 肆
bindsym $mod+Shift+5 move container to workspace 伍
bindsym $mod+Shift+6 move container to workspace 陆
bindsym $mod+Shift+7 move container to workspace 柒
bindsym $mod+Shift+8 move container to workspace 捌
bindsym $mod+Shift+9 move container to workspace 玖
bindsym $mod+Shift+0 move container to workspace 零
 
# reload config
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'pkill xorg?' -b 'Yes' 'i3-msg exit'"
 
# resize
mode "resize" {
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt
        bindsym Escape mode "default"
        bindsym Return mode "default"
}
bindsym $mod+r mode "resize"
 
# bar
bar {
       position top 
       colors {
		statusline #414149
		background #8cb194
		separator #414149
		focused_workspace  #8cb194 #c8d087 #000000
		inactive_workspace #8cb194 #868974 #000000
	      }
       status_command i3blocks -c ~/.config/i3blocks.conf
}
 
# autostart
exec_always compton -f --config ~/.compton.conf
exec_always xfce4-power-manager
exec_always nm-applet
exec_always diodon
 
# window style
new_window pixel 4
new_float pixel 4
 
# colors
client.focused #8cb194 #8cb194 #ffffff #8cb194 #8cb194
client.focused_inactive #868974 #868974 #ffffff #868974 #868974
client.unfocused #868974 #868974 #ffffff #868974 #868974
client.urgent #868974 #868974 #ffffff #868974 #868974
client.placeholder #868974 #868974 #ffffff #868974 #868974
 
# gaps
gaps inner 15
gaps outer 30
 
# volume
bindsym XF86AudioRaiseVolume exec amixer set 'Master' 5%+ && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec amixer set 'Master' 5%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec amixer set Master toggle 
