# Sandman6094's I3-GAPS config
 
# keymap bind
set $mod Mod4
floating_modifier $mod
bindsym $mod+Return exec lxterminal
bindsym $mod+F4 kill
bindsym $mod+d exec rofi -show run -show-icons
 
# font
font pango:Benmo Yonghei Bold 10
 
# focus
focus_follows_mouse no
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
 
# move
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
 
# mode toggle
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
 
# workspace 
bindsym $mod+1 workspace 1.(*´∀`)
bindsym $mod+2 workspace 2.(〃∀〃)
bindsym $mod+3 workspace 3.(((ﾟдﾟ)))
bindsym $mod+4 workspace 4.(ﾟ3ﾟ)
bindsym $mod+5 workspace 5.(*´ω`*)
bindsym $mod+6 workspace 6.(*ﾟ∇ﾟ)
bindsym $mod+7 workspace 7.(ﾟ∀。)
bindsym $mod+8 workspace 8.(ﾟ∀ﾟ)σ
bindsym $mod+9 workspace 9.(つд⊂)
bindsym $mod+0 workspace 10.⊂彡☆))∀`)
bindsym $mod+Shift+1 move container to workspace 1.(*´∀`)
bindsym $mod+Shift+2 move container to workspace 2.(〃∀〃)
bindsym $mod+Shift+3 move container to workspace 3.(((ﾟдﾟ)))
bindsym $mod+Shift+4 move container to workspace 4.(ﾟ3ﾟ)
bindsym $mod+Shift+5 move container to workspace 5.(*´ω`*)
bindsym $mod+Shift+6 move container to workspace 6.(*ﾟ∇ﾟ)
bindsym $mod+Shift+7 move container to workspace 7.(ﾟ∀。)
bindsym $mod+Shift+8 move container to workspace 8.(ﾟ∀ﾟ)σ
bindsym $mod+Shift+9 move container to workspace 9.(つд⊂)
bindsym $mod+Shift+0 move container to workspace 10.⊂彡☆))∀`)
 
# reload config
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'pkill xorg?' -b 'Yes' 'i3-msg exit'"
 
# resize
mode "resize" {
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt
        bindsym Escape mode "default"
        bindsym Return mode "default"
}
bindsym $mod+r mode "resize"
 
# bar
bar {
       position top 
       colors {
		statusline #414149
		background #8cb194
		separator #414149
		focused_workspace  #8cb194 #c8d087 #000000
		inactive_workspace #8cb194 #868974 #000000
	      }
       status_command i3blocks -c ~/.config/i3blocks.conf
}
 
# autostart
exec_always compton -f --config ~/.compton.conf
exec_always xfce4-power-manager
exec_always nm-applet
exec_always diodon
 
# window style
new_window pixel 4
new_float pixel 4
 
# colors
client.focused #8cb194 #8cb194 #ffffff #8cb194 #8cb194
client.focused_inactive #868974 #868974 #ffffff #868974 #868974
client.unfocused #868974 #868974 #ffffff #868974 #868974
client.urgent #868974 #868974 #ffffff #868974 #868974
client.placeholder #868974 #868974 #ffffff #868974 #868974
 
# gaps
gaps inner 15
gaps outer 30
 
# volume
bindsym XF86AudioRaiseVolume exec amixer set 'Master' 5%+ && pkill -RTMIN+2 i3blocks
bindsym XF86AudioLowerVolume exec amixer set 'Master' 5%- && pkill -RTMIN+2 i3blocks
bindsym XF86AudioMute exec amixer set Master toggle 
